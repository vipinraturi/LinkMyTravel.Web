    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Link My Travel</title>
    <base href="/" />
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
